FROM python:3.6-stretch

LABEL Author="Odafe Kelvin"
LABEL E-mail="iamkelvinwhyte@gmail.com"

COPY . /ffmpeg
WORKDIR /ffmpeg

######################################################################################################################
################################################# INSTALLING FFMPEG ##################################################
RUN apt-get -y update

RUN apt-get install -y ffmpeg
######################################################################################################################
######################################################################################################################
RUN pip install -r requirements.txt
CMD [ "python", "run.py" ]
